		 <version>2.0-Alpha-9</version>
		 <type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.eurekaclinical</groupId>
			<artifactId>eureka-common</artifactId>
			<type>test-jar</type>
		</dependency>
		<dependency>
			<groupId>org.eurekaclinical</groupId>
